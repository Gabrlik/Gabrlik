#A longer word than defined was found
def long_words(n, str):
    word_len = []
    txt = str.split(" ")
    for x in txt:
        if len(x) > n:
            word_len.append(x)
    return word_len	
print(long_words(7, "Praha je největší město v České republice. Můžeme zde nalézt mnoho významných památek"))
